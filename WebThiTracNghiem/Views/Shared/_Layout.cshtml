<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CTQuiz</title>
	<link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/admin/Dashboard.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
	<div class="container">
		<header class="header">
			<div class="logo">
				<a asp-controller="home" asp-action="index">
					<img src="/images/logo.png" alt="Logo Trường CĐ GTVT" class="logo-img">
				</a>
			</div>
			<div class="header-right">
				<div class="search-bar">
					<input type="text" placeholder="Tìm kiếm...">
					<button><i class="fas fa-search"></i></button>
				</div>
				<div class="help-button">
					<a href="guide.html" style="text-decoration: none; color: inherit;">
						<i class="fas fa-question-circle"></i>
						<span>Hướng dẫn</span>
					</a>
				</div>

				<partial name="_LoginPartial" />
		
			</div>
		</header>

		<div class="main-container">
			@RenderBody()
		</div>
	</div>

	<!-- Footer Section -->
	<footer class="footer">
		<div class="footer-container">
			<div class="footer-left">
				<div class="footer-info-row">
					<div class="footer-logo">
						<img src="/images/logo.png" alt="Logo Trường CĐ GTVT">
					</div>
					<div class="footer-address-block">
						<h3>TRỤ SỞ CHÍNH</h3>
						<div class="address-list">
							<div class="address-item">
								<i class="fas fa-home"></i>
								<span>252 Lý Chính Thắng, P.9, Q.3, TP.HCM</span>
							</div>
							<div class="address-item">
								<i class="fas fa-map-marker-alt"></i>
								<span>Cơ sở 2: 08 Nguyễn Ảnh Thủ, P.Trung Mỹ Tây, Q.12, TP.HCM</span>
							</div>
							<div class="address-item">
								<i class="fas fa-map-marker-alt"></i>
								<span>Cơ sở 3: 256 Đường Đinh Hội, P.Tăng Nhơn Phú B, TP Thủ Đức, TP.HCM</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="footer-center">
				<h3>THÔNG TIN LIÊN HỆ</h3>
				<div class="contact-list">
					<div class="contact-item">
						<i class="fas fa-envelope"></i>
						<span>Email: info@hcmct.edu.vn</span>
					</div>
					<div class="contact-item">
						<i class="fas fa-phone"></i>
						<span>(028)38.439.775 - (028)39.316.007</span>
					</div>
					<div class="contact-item">
						<i class="fas fa-phone"></i>
						<span>Cơ sở 2: (028) 37.030.469</span>
					</div>
					<div class="contact-item">
						<i class="fas fa-phone"></i>
						<span>Cơ sở 3: (028) 37.280.003</span>
					</div>
					<div class="contact-item">
						<i class="fas fa-globe"></i>
						<span>hcmct.edu.vn</span>
					</div>
				</div>
			</div>

			<div class="footer-right">
				<h3>THỐNG KÊ ONLINE</h3>
				<div class="stats-list">
					<div class="stats-item">
						<i class="fas fa-users"></i>
						<div class="stats-info">
							<span class="stats-label">Đang online:</span>
							<span class="stats-value">30698</span>
						</div>
					</div>
					<div class="stats-item">
						<i class="fas fa-chart-line"></i>
						<div class="stats-info">
							<span class="stats-label">Tổng truy cập:</span>
							<span class="stats-value">2,953,769</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<a href="#" class="contact-fab" title="Liên hệ với nhà trường">
		<i class="fas fa-comments"></i>
	</a>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
