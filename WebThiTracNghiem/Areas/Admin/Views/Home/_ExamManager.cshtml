@model List<WebThiTracNghiem.Models.DeThi>

<div class="main-wrapper">
    <main class="main-content exam-management-section">

        <div class="page-header">
            <h1>Quản lý kỳ thi</h1>
            <div class="header-actions">
                <!-- Export -->
                <button type="button" class="btn btn-secondary" onclick="exportExams()">
                    <i class="fas fa-file-export"></i> Export Excel
                </button>
            </div>
        </div>

        <!-- Bộ lọc -->
        <div class="filter-section">
            <div class="filter-group">
                <label>Trạng thái:</label>
                <select id="examStatusFilter">
                    <option value="">Tất cả</option>
                    <option value="running">Đang diễn ra</option>
                    <option value="upcoming">Sắp diễn ra</option>
                    <option value="finished">Đã kết thúc</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Tìm kiếm:</label>
                <input type="text" id="examSearchInput" placeholder="Tên kỳ thi, môn học..." />
            </div>
        </div>

        <!-- Bảng dữ liệu -->
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên kỳ thi</th>
                        <th>Môn học</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var now = DateTime.Now;
                        var stt = 1;
                        foreach (var exam in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@exam.TieuDe</td>
                                <td>@exam.MaDe</td>
                                <td>
                                    @if (exam.GioBD <= now && exam.GioKT > now)
                                    {
                                        <span class="status-badge in-progress">Đang diễn ra</span>
                                    }
                                    else if (exam.GioBD > now)
                                    {
                                        <span class="status-badge upcoming">Sắp diễn ra</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge finished">Đã kết thúc</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@exam.Id" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@exam.Id" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@exam.Id" class="btn-icon"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" style="text-align:center;">Không có kỳ thi nào được tìm thấy.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="pagination">
            <button class="btn-page active">1</button>
            <button class="btn-page">2</button>
            <button class="btn-page">3</button>
            <button class="btn-page">...</button>
            <button class="btn-page">10</button>
        </div>

    </main>
</div>