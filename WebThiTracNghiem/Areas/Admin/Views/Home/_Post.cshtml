<div class="page-header">
	<h1>Quản lý bài viết</h1>
	<div class="header-actions">
		<button class="admin-posts-btn admin-posts-btn-secondary" onclick="showPostsList()">
			<i class="fas fa-list"></i> Danh sách bài viết
		</button>
		<button class="admin-posts-btn admin-posts-btn-primary" onclick="savePost()">
			<i class="fas fa-save"></i> Lưu bài viết
		</button>
	</div>
</div>

<!-- Post Creation Form -->
<div class="admin-posts-form-container">
	<form id="adminPostsForm" class="admin-posts-form">
		<!-- Post Title Section -->
		<div class="admin-posts-form-section">
			<h3 class="admin-posts-section-title">
				<i class="fas fa-heading"></i>
				Tiêu đề bài viết
			</h3>
			<div class="admin-posts-form-group">
				<label for="adminPostsTitle">Tiêu đề chính</label>
				<input type="text" id="adminPostsTitle" name="postTitle" class="admin-posts-form-control" placeholder="Nhập tiêu đề bài viết..." required>
			</div>
		</div>

		<!-- Section 1 -->
		<div class="admin-posts-form-section">
			<h3 class="admin-posts-section-title">
				<i class="fas fa-edit"></i>
				Phần 1
			</h3>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection1Title">Đề mục phần 1</label>
				<input type="text" id="adminPostsSection1Title" name="section1Title" class="admin-posts-form-control" placeholder="Nhập đề mục phần 1...">
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection1Image">Ảnh phần 1</label>
				<div class="admin-posts-image-upload-slot" data-slot="section1">
					<div class="admin-posts-upload-placeholder">
						<i class="fas fa-plus"></i>
						<span>Thêm ảnh cho phần 1</span>
					</div>
					<input type="file" class="admin-posts-image-input" data-slot="section1" accept="image/*">
				</div>
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection1Content">Nội dung phần 1</label>
				<textarea id="adminPostsSection1Content" name="section1Content" class="admin-posts-form-control" rows="6" placeholder="Nhập nội dung phần 1..."></textarea>
			</div>
		</div>

		<!-- Section 2 -->
		<div class="admin-posts-form-section">
			<h3 class="admin-posts-section-title">
				<i class="fas fa-edit"></i>
				Phần 2
			</h3>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection2Title">Đề mục phần 2</label>
				<input type="text" id="adminPostsSection2Title" name="section2Title" class="admin-posts-form-control" placeholder="Nhập đề mục phần 2...">
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection2Image">Ảnh phần 2</label>
				<div class="admin-posts-image-upload-slot" data-slot="section2">
					<div class="admin-posts-upload-placeholder">
						<i class="fas fa-plus"></i>
						<span>Thêm ảnh cho phần 2</span>
					</div>
					<input type="file" class="admin-posts-image-input" data-slot="section2" accept="image/*">
				</div>
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection2Content">Nội dung phần 2</label>
				<textarea id="adminPostsSection2Content" name="section2Content" class="admin-posts-form-control" rows="6" placeholder="Nhập nội dung phần 2..."></textarea>
			</div>
		</div>

		<!-- Section 3 -->
		<div class="admin-posts-form-section">
			<h3 class="admin-posts-section-title">
				<i class="fas fa-edit"></i>
				Phần 3
			</h3>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection3Title">Đề mục phần 3</label>
				<input type="text" id="adminPostsSection3Title" name="section3Title" class="admin-posts-form-control" placeholder="Nhập đề mục phần 3...">
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection3Image">Ảnh phần 3</label>
				<div class="admin-posts-image-upload-slot" data-slot="section3">
					<div class="admin-posts-upload-placeholder">
						<i class="fas fa-plus"></i>
						<span>Thêm ảnh cho phần 3</span>
					</div>
					<input type="file" class="admin-posts-image-input" data-slot="section3" accept="image/*">
				</div>
			</div>
			<div class="admin-posts-form-group">
				<label for="adminPostsSection3Content">Nội dung phần 3</label>
				<textarea id="adminPostsSection3Content" name="section3Content" class="admin-posts-form-control" rows="6" placeholder="Nhập nội dung phần 3..."></textarea>
			</div>
		</div>

		<!-- Form Actions -->
		<div class="admin-posts-form-actions">
			<button type="button" class="admin-posts-btn admin-posts-btn-secondary" onclick="resetForm()">
				<i class="fas fa-undo"></i> Làm mới
			</button>
			<button type="button" class="admin-posts-btn admin-posts-btn-primary" onclick="savePost()">
				<i class="fas fa-save"></i> Lưu bài viết
			</button>
		</div>
	</form>
</div>

<!-- Success Modal -->
<div id="adminPostsSuccessModal" class="admin-posts-modal">
	<div class="admin-posts-modal-content">
		<div class="admin-posts-modal-header">
			<h3><i class="fas fa-check-circle"></i> Thành công!</h3>
		</div>
		<div class="admin-posts-modal-body">
			<p>Bài viết đã được lưu thành công!</p>
		</div>
		<div class="admin-posts-modal-footer">
			<button class="admin-posts-btn admin-posts-btn-primary" onclick="closeSuccessModal()">Đóng</button>
		</div>
	</div>
</div>