<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang quản trị - CTQuiz</title>
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/Dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <a asp-controller="home" asp-action="index">
                    <img src="/images/logo.png" alt="Logo Trường CĐ GTVT" class="logo-img">
                </a>
            </div>
            <div class="header-right">
                <div class="search-bar">
                    <input type="text" placeholder="Tìm kiếm...">
                    <button><i class="fas fa-search"></i></button>
                </div>

                <partial name="_LoginPartial" />
            
            </div>
        </header>

        <div class="main-container">
            <!-- Side Menu -->
            <nav class="side-menu">
                <ul>
                    <li>
                        <a href="dashboard.html" class="side-link active">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Tổng quan</span>
                        </a>
                    </li>
                    <li>
                        <a href="users/index.html" class="side-link">
                            <i class="fas fa-users"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </li>
                    <li>
                        <a href="courses/index.html" class="side-link">
                            <i class="fas fa-book"></i>
                            <span>Quản lý khóa học</span>
                        </a>
                    </li>
                    <li>
                        <a href="exams/index.html" class="side-link">
                            <i class="fas fa-file-alt"></i>
                            <span>Quản lý kỳ thi</span>
                        </a>
                    </li>
                    <li>
                        <a href="questions/index.html" class="side-link">
                            <i class="fas fa-question-circle"></i>
                            <span>Ngân hàng câu hỏi</span>
                        </a>
                    </li>
                    <li>
                        <a href="reports/index.html" class="side-link">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo & Thống kê</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="../../scripts/admin/dashboard.js"></script>
</body>
</html> 