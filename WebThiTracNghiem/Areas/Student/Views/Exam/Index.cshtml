@model List<DeThi>

<main class="main-content">
    <div class="page-header">
        <h1>Danh sách Bài thi</h1>
    </div>

    <!-- Exam Filters -->
    <div class="exam-filters">
        <div class="search-box">
            <input id="searchInput" type="text" placeholder="Tìm kiếm bài thi...">
            <button id="SearchStudentExam"><i class="fas fa-search"></i></button>
        </div>
    </div>
    <!-- Exam List -->
    <div class="exam-grid">
        <!-- Exam Card 1 -->
        @foreach (var deThi in Model)
        {
            <div class="exam-management-card">
                <div class="exam-header">
                    <h3>@deThi.TieuDe</h3>
                    <span class="exam-code">Mã đề: @deThi.MaDe</span>
                    <span class="exam-status @(deThi.GioBD > DateTime.Now ? "upcoming" : "active")">@(deThi.GioBD > DateTime.Now ? "Sắp diễn ra" : "Đang diễn ra")</span>
                </div>
                <div class="exam-details">
                    <p><i class="fas fa-calendar"></i> Bắt đầu: @deThi.GioBD.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><i class="fas fa-calendar-check"></i> Kết thúc: @deThi.GioKT.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><i class="fas fa-clock"></i> Thời gian: @deThi.ThoiGian phút</p>
                    <p><i class="fas fa-star"></i> Điểm tối đa: @deThi.DiemToiDa</p>
                    <p class="full-width"><i class="fas fa-chalkboard-teacher"></i> GV: @deThi.GiangVien.HoTen</p>
                </div>
                <div class="exam-actions">
                    <button href="/student/exam/startexam?id=@deThi.Id" class="action-btn view DoExam"><i class="fas fa-play-circle"></i> Bắt đầu làm bài</button>
                </div>
            </div>
        }
    </div>
        <div class="pagination">
            <button class="btn-page page-ExamList" data-page="@(ViewBag.CurrentPage - 1)" @(ViewBag.CurrentPage == 1 ? "disabled" : "")>
                <i class="fas fa-chevron-left"></i>
            </button>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <button class="btn-page page-ExamList @(ViewBag.CurrentPage == i ? "active" : "")" data-page="@i">@i</button>
            }

            <button class="btn-page page-ExamList" data-page="@(ViewBag.CurrentPage + 1)" @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")>
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
</main>
